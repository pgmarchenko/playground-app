platform :ios, '10.0'

target 'PlaygroundApp' do
    use_frameworks!
   
    pod 'RxCocoa', :git => 'https://github.com/beathead-team/RxSwift.git'
end

target 'App' do
    use_frameworks!
    
    pod 'RxSwift', :git => 'https://github.com/beathead-team/RxSwift.git'
    pod 'RxCocoa', :git => 'https://github.com/beathead-team/RxSwift.git'
    
end

target 'UI' do
    use_frameworks!
    
    pod 'SnapKit',  '~> 4.0.0'
    pod 'RxSwift', :git => 'https://github.com/beathead-team/RxSwift.git'
    pod 'RxCocoa', :git => 'https://github.com/beathead-team/RxSwift.git'
    
    pod 'DeviceScreenViewController', :git => 'https://github.com/pgmarchenko/DeviceScreenViewController.git', :tag => '0.1.3'
end

target 'Utilities' do
    use_frameworks!
    
    pod 'RxSwift', :git => 'https://github.com/beathead-team/RxSwift.git'
    pod 'RxCocoa', :git => 'https://github.com/beathead-team/RxSwift.git'
    
end

target 'AppFlow' do
    use_frameworks!
    
    pod 'RxSwift', :git => 'https://github.com/beathead-team/RxSwift.git'
    pod 'RxCocoa', :git => 'https://github.com/beathead-team/RxSwift.git'
    
end

target 'AppFlowTests' do
  use_frameworks!
  
  pod 'Quick'
  pod 'Nimble'
  
  pod 'RxSwift', :git => 'https://github.com/beathead-team/RxSwift.git'
  pod 'RxCocoa', :git => 'https://github.com/beathead-team/RxSwift.git'
end
